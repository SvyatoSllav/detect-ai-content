{
  "manifest_version": 3,
  "name": "AI Text Detector",
  "version": "1.0",
  "description": "Detect if selected text is AI-generated.",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "textIcon16.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "textIcon16.png",
    "48": "textIcon48.png",
    "128": "textIcon128.png"
  }
} 